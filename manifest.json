{
  "manifest_version": 2,
  "name": "Tea Timer",
  "version": "1.1",
  "description": "Google-style tea timer with circular progress and badge countdown",
  "permissions": [
    "storage",
    "notifications",
    "theme"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "tea-timer-g@example.com",
      "strict_min_version": "90.0"
    }
  },
  "icons": {
    "48": "icons/timer.svg",
    "96": "icons/timer.svg"
  },
  "browser_action": {
    "default_icon": "icons/timer.svg",
    "default_title": "Tea Timer",
    "default_popup": "popup/popup.html",
    "browser_style": false
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": false
  }
}